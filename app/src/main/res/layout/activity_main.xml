<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/vistaT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvVista"
        style="@style/AppTheme"
        android:clickable="true"
        android:textColor="#ff1c30ff"
        android:width="@dimen/abc_text_size_title_material"
        android:gravity="center_horizontal" />


    <DatePicker
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/datePicker"
        android:layout_below="@+id/tvVista"
        android:layout_centerHorizontal="true"
        android:spinnersShown="true"
        android:calendarViewShown="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spEscala"
        android:layout_above="@+id/btBuscar"
        android:scrollbars="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUSCAR"
        android:id="@+id/btBuscar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="71dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
